<style>
    .buttonsContainer {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .buttonAdd {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #3c38a6;
        color: white;
        font-size: 24px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        user-select: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease;
    }

    .buttonAdd:hover {
        background-color: #6f6dcc;
    }

    .userPhoto {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: #ddd;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
        cursor: pointer;
        border: 3px solid #3c38a6;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px;
    }

    .profile-img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .user-name {
        font-weight: bold;
        font-size: 14px;
    }

    .dropDownMenu {
        position: absolute;
        top: 60px;
        right: 0;
        min-width: 180px;
        background-color: #1A1A1A;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
        border: 1px solid #2a2a2a;
        z-index: 1000;
        overflow: hidden;
        font-family: 'Segoe UI', sans-serif;
        animation: fadeIn 0.2s ease;
        width: 15%;
    }

    .dropDownMenu a {
        display: block;
        padding: 12px 16px;
        color: #fff;
        text-decoration: none;
        font-size: 15px;
        border: 1px solid #2a2a2a;
        transition: background 0.2s ease, color 0.2s ease;
    }

    .dropDownMenu a:hover {
        background-color: #3c38a6;
        color: white;
    }

    .dropDownMenu::before {
        content: "";
        position: absolute;
        top: -8px;
        left: 20px;
        width: 0;
        height: 0;
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;
        border-bottom: 8px solid #1A1A1A;
        filter: drop-shadow(0 -1px 1px rgba(0, 0, 0, 0.04));
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.6);
        z-index: 9999;
        justify-content: center;
        align-items: center;
    }

    /* Caixa do popup */
    .popup {
        background: white;
        padding: 30px;
        border-radius: 12px;
        text-align: center;
        width: 300px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }

    .popup input[type="file"] {
        margin: 20px 0;
        width: 100%;
    }

    .popup button {
        padding: 10px 20px;
        margin: 5px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
    }

    #uploadButton {
        background-color: #4CAF50;
        color: white;
    }

    .close-btn {
        background-color: #f44336;
        color: white;
    }
</style>
